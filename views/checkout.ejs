<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Order deatils</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/checkout" method="POST">
            <div class="form-group">
              <label for="email">Email</label>

              <input type="email" class="form-control" name="username" value="<%=user.username%>" disabled>
            </div>
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" name="name" value="<%=user.name%>" disabled>
            </div>

            <div class="form-group">
              <label for="address">address</label>
              <input type="text" class="form-control" name="address" value="<%=user.address%>" disabled>
            </div>
            <div class="form-group">
              <label for="phoneNo">phoneNo</label>
              <input type="text" class="form-control" name="phoneNo" value="<%=user.phoneNo%>" disabled>
            </div>
            <button type="submit" class="btn btn-dark">Place Order!</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
