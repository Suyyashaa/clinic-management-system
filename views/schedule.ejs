<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Schedule</h1>
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/schedule/test" method="POST">

            <div class="form-group">

                <label for="name">Test Name</label>
                <select name="name" >
                  <%tests.forEach((test) => {%>
                    <option value="<%=test.name%>"><%=test.name%></option>
                    <%});%>
                </select>


            </div>

            <div class="form-group">
              <label for="text">Test time</label>
              <input type="text" class="form-control" name="time">
            </div>
            <div class="form-group">
              <label for="text">Test date</label>
              <input type="text" class="form-control" name="date">
            </div>


            <button type="submit" class="btn btn-dark">Submit test</button>

          </form>
          <hr>

          <form action="/schedule/doctor" method="POST">

            <div class="form-group">
              <label for="text">Doctor Name</label>
              <input type="text" class="form-control" name="name">
            </div>
            <div class="form-group">
              <label for="text">Doctor time</label>
              <input type="text" class="form-control" name="time">
            </div>
            <div class="form-group">
              <label for="text">Doctor date</label>
              <input type="text" class="form-control" name="date">
            </div>


            <button type="submit" class="btn btn-dark">Submit doctor </button>

          </form>

        </div>
      </div>
    </div>
  </div>
</div>
