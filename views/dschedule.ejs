<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Schedule Doctor</h1>
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">
          <form action="/schedule/doctor" method="POST">

            <div class="form-group">
              <label for="name">Docotor Name</label>
              <select name="name" >
                <%doctors.forEach((doctor) => {%>
                  <option value="<%=doctor.name%>"><%=doctor.name%></option>
                  <%});%>
              </select>
            </div>
            <div class="form-group">
              <label for="text">Doctor time</label>
              <input type="text" class="form-control" name="time">
            </div>
            <div class="form-group">
              <label for="text">Doctor date</label>
              <input type="text" class="form-control" name="date">
            </div>


            <button type="submit" class="btn btn-dark">Submit doctor </button>

          </form>

        </div>
      </div>
    </div>
  </div>
</div>
