<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Update</h1>
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/admin/editTest/edit/<%=test[0]._id%>" method="POST">
            <div class="form-group">
              <label for="name">name</label>
              <input type="text" class="form-control" name="name" value="<%=test[0].name%>">
            </div>
            <div class="form-group">
              <label for="cost">cost</label>
              <input type="text" class="form-control" name="cost" value="<%=test[0].cost%>">
            </div>
            <button type="submit" class="btn btn-dark">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
